{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "extends": "../tsconfig.json",
  "include": ["src/**/*", "../shared/**/*"]
}
